<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:right="0dp" android:left="-1dp" android:bottom="1dp">
        <!--здесь android:bottom="1dp" толщина линии
            вы можете манипулировать этими параметрами и также сделать вертикальную линию-->
        <shape android:shape="rectangle">
            <stroke android:width="0dp" android:color="@color/spinner"/><!--толщина и цвет линии-->
            <!--<solid android:color="#5580CBC4"/>--><!--если нужен фон для TextView-->
          <corners android:radius="10dp"/><!--если нужен радиус-->
        </shape>
    </item>
</selector>