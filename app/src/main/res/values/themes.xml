<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Test" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyTextStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/mark_pro_heavy</item>
    </style>

    <style name="ProductDetailsGeneralTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/title</item>
        <item name="fontFamily">@font/mark_pro_med</item>
    </style>
    <style name="ProductDetailsTableBottom">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/title_table</item>
        <item name="fontFamily">@font/mark_pro_reg</item>
        <item name="background">@drawable/bottom</item>
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@null</item>
        <item name="backgroundTintMode">@null</item>

    </style>
    <style name="GeneralTitleBold">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/title</item>
        <item name="fontFamily">@font/mark_pro_bold</item>
    </style>
    <style name="TextMyCart">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/mark_pro_reg</item>
    </style>

    <style name="TitleMin">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/title</item>
        <item name="fontFamily">@font/mark_pro_med</item>
    </style>
    <style name="TitleFilter" parent="TitleMin">
        <item name="android:textSize">18sp</item>

    </style>
    <style name="TitleMinMyCart" parent="TitleMin">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/mark_pro_med</item>
    </style>
    <style name="TitleMinMyCartPrice" parent="TitleMin">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/general_orange</item>
        <item name="fontFamily">@font/mark_pro_med</item>
    </style>

    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="backgroundColor">@android:color/holo_orange_dark</item>
    </style>
    <style name="MyRadioButtonCheck" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@android:color/holo_orange_dark</item>
        <item name="backgroundColor">@android:color/holo_orange_dark</item>
    </style>

    <style name="ButtonGeneral">
        <item name="android:background">@drawable/bottom_detail</item>
    </style>
    <style name="ButtonSelectBlue">
        <item name="android:background">@drawable/bottom_select_color_blue</item>
    </style>
    <style name="ButtonSelectDark">
        <item name="android:background">@drawable/bottom_select_color_darck</item>
    </style>
    <style name="BottomSeeMore">

    </style>
    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/title</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="fontFamily">@font/mark_pro_heavy</item>
        <item name="itemIconTint">@drawable/bottom_navigation_background_color</item>
        <item name="android:textSize">28sp</item>
        <item name="enforceTextAppearance">false</item>

    </style>
    <style name="Background">
        <item name="backgroundColor">@color/background</item>

    </style>

<style name="RadioButtonCategory" >
    <item name="buttonStyle">@drawable/shape_category</item>
    <item name="fontFamily">@font/mark_pro_med</item>

    <item name="android:textAllCaps">false</item>


</style>
    <style name="ViewPager" parent="">
        <item name="android:background">@drawable/bottom</item>
    </style>
</resources>