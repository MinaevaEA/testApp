<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/main.appbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#F5F5F5"
        tools:ignore="MissingConstraints">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <ImageButton
            android:id="@+id/filter_btn"
            android:layout_width="32dp"
            android:layout_height="35dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="28dp"
            android:background="@color/background"
            android:layout_gravity="right"
            app:srcCompat="@drawable/filter"
            tools:ignore="ContentDescription" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="-25dp"
            android:fontFamily="@font/mark_pro_b"
            android:background="@color/background"
            android:entries="@array/city"
            android:textColor="@color/title"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/position"
            android:layout_width="32dp"
            android:layout_height="35dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="-29dp"
            android:layout_marginEnd="46dp"
            android:background="@color/background"
            app:srcCompat="@drawable/loc2"
            tools:ignore="ContentDescription" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="780dp"
        android:overScrollMode="never"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">


            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/bottom"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hot_sales"
                tools:ignore="MissingConstraints" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="387dp"
                android:layout_height="372dp"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.333"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/best_seller"
                tools:ignore="MissingConstraints" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/select_category"
                tools:ignore="MissingConstraints" />

            <android.widget.SearchView
                android:id="@+id/searchView"
                android:layout_width="302dp"
                android:layout_height="29dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/search"
                android:color="@color/general_orange"
                app:layout_constraintEnd_toStartOf="@+id/imageButton2"
                app:layout_constraintHorizontal_bias="0.433"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recyclerViewCategory"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/hot_sales"
                style="@style/GeneralTitleBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:text="@string/hot_sales"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/searchView"
                tools:ignore="MissingConstraints" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/shape_qr"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recyclerViewCategory"
                app:srcCompat="@drawable/qr"
                tools:ignore="ContentDescription,MissingConstraints" />

            <TextView
                android:id="@+id/select_category"
                style="@style/GeneralTitleBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:text="@string/select_ct"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/best_seller"
                style="@style/GeneralTitleBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="16dp"
                android:text="@string/best_seller"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewPager" />

            <Button
                android:id="@+id/see_more_seller"
                android:layout_width="110dp"
                android:layout_height="38dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="5dp"
                android:background="@color/background"
                android:fontFamily="@font/mark_pro_regular"
                android:stateListAnimator="@null"
                android:text="@string/see_more"
                android:textAllCaps="false"
                android:textColor="@color/general_orange"
                android:textSize="15sp"
                app:backgroundTint="@null"
                app:backgroundTintMode="@null"
                app:layout_constraintBottom_toTopOf="@+id/recyclerView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/best_seller"
                app:layout_constraintTop_toBottomOf="@+id/viewPager"
                app:layout_constraintVertical_bias="0.2" />

            <Button
                android:id="@+id/button4"
                android:layout_width="110dp"
                android:layout_height="42dp"
                android:layout_marginTop="5dp"
                android:background="@color/background"
                android:fontFamily="@font/mark_pro_regular"
                android:stateListAnimator="@null"
                android:text="@string/view_all"
                android:textAllCaps="false"
                android:textColor="@color/general_orange"
                android:textSize="15sp"
                app:backgroundTint="@null"
                app:backgroundTintMode="@null"
                app:layout_constraintBottom_toTopOf="@+id/recyclerViewCategory"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.9"
                app:layout_constraintStart_toEndOf="@+id/select_category"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.187" />

            <Button
                android:id="@+id/see_more_hot"
                android:layout_width="116dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@color/background"
                android:fontFamily="@font/mark_pro_regular"
                android:stateListAnimator="@null"
                android:text="@string/see_more"
                android:textAllCaps="false"
                android:textColor="@color/general_orange"
                android:textSize="15sp"
                app:backgroundTint="@null"
                app:backgroundTintMode="@null"
                app:layout_constraintBottom_toTopOf="@+id/viewPager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/hot_sales"
                app:layout_constraintTop_toBottomOf="@+id/imageButton2"
                app:layout_constraintVertical_bias="0.1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>